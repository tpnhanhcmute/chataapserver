{
  "compilerOptions": {
    "target": "ES2018",                          
    "module": "commonjs",                    
    "lib": ["es2020", "dom"],                
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true, 
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  }
}